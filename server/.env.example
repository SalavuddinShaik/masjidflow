NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/masjidflow"

# JWT Secrets (use strong random strings in production)
JWT_ACCESS_SECRET="your-access-secret-min-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-characters-long"

# SMS Provider: mock (for dev) | twilio (for prod)
SMS_PROVIDER=mock

# Twilio (only needed if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# CORS
CORS_ORIGIN="http://localhost:5173"
